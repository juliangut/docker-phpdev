{
  "name": "juliangut/docker-phpdev",
  "description": "PHP development Docker image",
  "keywords": [
    "Docker",
    "development",
    "image"
  ],
  "type": "project",
  "homepage": "https://github.com/juliangut/docker-phpdev",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/docker-phpdev",
    "issues": "https://github.com/juliangut/docker-phpdev/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "symfony/console": "^6.3",
    "twig/twig": "^3.8"
  },
  "require-dev": {
    "grifart/phpstan-oneline": "~0.4",
    "juliangut/easy-coding-standard-config": "^1.13",
    "juliangut/phpstan-config": "^1.1",
    "overtrue/phplint": "^9.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.14",
    "povils/phpmnd": "^3.2",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Docker\\PhpDev\\": "src/"
    }
  },
  "autoload-dev": {
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "bin": [
    "bin/phpdev"
  ],
  "extra": {
    "versions": {
      "cli": {
        "8.2": {
          "image": "php:8.2-cli-alpine",
          "tags": ["latest", "cli-latest", "cli", "8", "8.2"]
        },
        "8.1": {
          "image": "php:8.1-cli-alpine",
          "tags": ["8.1"]
        },
        "8.0": {
          "image": "php:8.0-cli-alpine",
          "tags": ["8.0"]
        },
        "7.4": {
          "image": "php:7.4-cli-alpine",
          "xdebug": "3.1.6",
          "tags": ["7", "7.4"]
        }
      },
      "fpm": {
        "8.2": {
          "image": "php:8.2-fpm-alpine",
          "tags": ["fpm-latest", "fpm", "8-fpm", "8.2-fpm"]
        },
        "8.1": {
          "image": "php:8.1-fpm-alpine",
          "tags": ["8.1-fpm"]
        },
        "8.0": {
          "image": "php:8.0-fpm-alpine",
          "tags": ["8.0-fpm"]
        },
        "7.4": {
          "image": "php:7.4-fpm-alpine",
          "xdebug": "3.1.6",
          "tags": ["7-fpm", "7.4-fpm"]
        }
      },
      "jenkins": {
        "8.2": {
          "image": "php:8.2-cli-alpine",
          "tags": ["jenkins-latest", "jenkins", "8-jenkins", "8.2-jenkins"]
        },
        "8.1": {
          "image": "php:8.1-cli-alpine",
          "tags": ["8.1-jenkins"]
        },
        "8.0": {
          "image": "php:8.0-cli-alpine",
          "tags": ["8.0-jenkins"]
        },
        "7.4": {
          "image": "php:7.4-cli-alpine",
          "xdebug": "3.1.6",
          "tags": ["7-jenkins", "7.4-jenkins"]
        }
      }
    }
  }
}
